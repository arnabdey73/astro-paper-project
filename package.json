{
  "name": "astro-paper-project",
  "type": "module",
  "version": "5.2.0",
  "scripts": {
    "dev": "NODE_OPTIONS='--max-old-space-size=4096' astro dev",
    "dev:safe": "NODE_OPTIONS='--max-old-space-size=4096 --no-warnings' ASTRO_TELEMETRY_DISABLED=1 astro dev --verbose",
    "prebuild": "node scripts/copy-images.js && sh scripts/prepare-vercel-deploy.sh",
    "build": "NODE_OPTIONS='--max-old-space-size=4096 --no-warnings' astro check && sh ./vercel-build.sh",
    "build:fast": "NODE_OPTIONS='--max-old-space-size=4096' ASTRO_TELEMETRY_DISABLED=1 astro build",
    "verify": "sh ./verify-build.sh",
    "verify:vercel": "sh ./verify-vercel-build.sh",
    "preview": "astro preview",
    "sync": "astro sync",
    "astro": "astro",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "lint": "eslint .",
    "clean": "rm -rf dist/ .astro/ node_modules/.vite node_modules/.astro",
    "diagnose": "sh diagnose-timeout.sh",
    "restore": "sh restore-config.sh"
  },
  "dependencies": {
    "@astrojs/react": "^4.3.0",
    "@astrojs/rss": "^4.0.11",
    "@astrojs/sitemap": "^3.2.1",
    "@astrojs/vercel": "^8.2.1",
    "@resvg/resvg-js": "^2.6.2",
    "@vercel/analytics": "^1.5.0",
    "astro": "^5.5.2",
    "dayjs": "^1.11.13",
    "lodash.kebabcase": "^4.1.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "remark-collapse": "^0.1.2",
    "remark-toc": "^9.0.0",
    "satori": "^0.12.1",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/tailwind": "^6.0.2",
    "@pagefind/default-ui": "^1.3.0",
    "@tailwindcss/typography": "^0.5.16",
    "@types/lodash.kebabcase": "^4.1.9",
    "@typescript-eslint/parser": "^8.26.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.22.0",
    "eslint-plugin-astro": "^1.3.1",
    "globals": "^16.0.0",
    "node-fetch": "^3.3.2",
    "pagefind": "^1.3.0",
    "postcss": "^8.5.3",
    "postcss-nested": "^7.0.2",
    "prettier": "^3.5.3",
    "prettier-plugin-astro": "^0.14.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2"
  }
}
