    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    border-color: var(--color-accent);
  }

  .career-step:hover::before {
    opacity: 1;
  }

  .career-year {
    font-size: 0.875rem;
    color: var(--color-accent);
    font-weight: 600;
    margin-bottom: 0.5rem;
    letter-spacing: 0.025em;
  }

  .career-role {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-text-base);
    margin: 0.5rem 0;
    line-height: 1.3;
  }

  .career-company {
    font-style: italic;
    color: var(--color-text-muted);
    font-weight: 500;
    margin-bottom: 1rem;
    font-size: 0.95rem;
