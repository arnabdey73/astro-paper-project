              <text x="440" y="32" text-anchor="middle" font-family="ui-monospace, monospace" font-size="16" font-weight="600" fill="#e0e7ff">TEST</text>
              
              <!-- Arrow 3 -->
              <path d="M495 25 L535 25" stroke="url(#accentGradient)" stroke-width="3"/>
              <polygon points="535,20 550,25 535,30" fill="#6366f1"/>
              
              <!-- DEPLOY Circle -->
              <circle cx="600" cy="25" r="40" fill="rgba(99, 102, 241, 0.2)" stroke="url(#accentGradient)" stroke-width="3" filter="url(#glow)"/>
