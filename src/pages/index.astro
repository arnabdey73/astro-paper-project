              <pattern id="techGrid" width="80" height="80" patternUnits="userSpaceOnUse">
                <circle cx="40" cy="40" r="1.5" fill="#6366f1" opacity="0.4"/>
                <path d="M20 20 L60 20 M40 0 L40 80" stroke="#8b5cf6" stroke-width="0.5" opacity="0.3"/>
