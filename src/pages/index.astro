                <rect x="100" y="50" width="120" height="45" rx="8" fill="rgba(99, 102, 241, 0.15)" stroke="#6366f1" stroke-width="2" filter="url(#glow)"/>
                <text x="160" y="78" text-anchor="middle" font-family="ui-monospace, monospace" font-size="14" font-weight="600" fill="#e0e7ff">Terraform</text>
                
