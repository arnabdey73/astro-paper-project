              <text x="100" y="32" text-anchor="middle" font-family="ui-monospace, monospace" font-size="16" font-weight="600" fill="#e0e7ff">CODE</text>
              
              <!-- Arrow 1 -->
              <path d="M155 25 L195 25" stroke="url(#accentGradient)" stroke-width="3"/>
              <polygon points="195,20 210,25 195,30" fill="#6366f1"/>
              
